{
    "name": "IMS DevContainer",
    "image": "python:3.10",  // Pulls a Python 3.10 image for your project
    "postCreateCommand": "pip install -r requirements.txt",
    "settings": {
        "python.pythonPath": "/usr/local/bin/python3"
    },
    "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker"
    ],
    "forwardPorts": [8501]  // Optional: For apps like Streamlit
}
